<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sage.CrimeReporter.Activities.Statistics">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/planted_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/tvCrimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Reported Crime Statistics"/>

                <TextView
                    android:layout_below="@id/tvCrimeTitle"
                    android:id="@+id/tvReportedCrime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Reported Crime"/>
                <TextView
                    android:fontFamily="casual"
                    android:layout_below="@id/tvReportedCrime"
                    android:id="@+id/tvNoOfCrime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of Crime Reported: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tvNoOfCrime"
                    android:layout_below="@id/tvReportedCrime"
                    android:id="@+id/tvNoCrime"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <Button
                    android:id="@+id/btn_display"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tvNoCrime"
                    android:text="Display Statistics"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPink"/>


                 <ImageView
                     android:layout_width="500dp"
                     android:layout_below="@id/tvNoCrime"
                     android:layout_marginTop="20dp"
                     android:layout_height="400dp"
                     android:src="@drawable/logo_text"/>
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</ScrollView>

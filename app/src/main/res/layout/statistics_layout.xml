<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameOfReporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporters Name"
            android:fontFamily="casual"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/numberOfCrime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No of Crime Reporters"
            android:layout_below="@id/nameOfReporter"
            android:fontFamily="casual"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/coordinatesOfCrime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crime Scene"
            android:layout_below="@id/numberOfCrime"
            android:fontFamily="casual"
            android:padding="5dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>